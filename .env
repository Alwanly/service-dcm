# Service Distribute Management - All-In-One Configuration
# This file is for local development with all services running together

# Controller Service Configuration
CONTROLLER_ADDR=:8080
DATABASE_PATH=/app/data/data.db
POLL_INTERVAL=30

# Admin Credentials (CHANGE THESE IN PRODUCTION!)
ADMIN_USER=admin
ADMIN_PASSWORD=admin

# Agent Credentials (CHANGE THESE IN PRODUCTION!)
AGENT_USER=agent
AGENT_PASSWORD=agent

# Agent Service Configuration
CONTROLLER_URL=http://controller:8080
WORKER_URL=http://worker:8082
AGENT_ADDR=:8081
AGENT_HOSTNAME=sdm-agent
REQUEST_TIMEOUT=10

# Agent Registration Settings
REGISTRATION_MAX_RETRIES=5
INITIAL_BACKOFF=1
MAX_BACKOFF=30
BACKOFF_MULTIPLIER=2

# Agent Heartbeat Settings
AGENT_HEARTBEAT_ENABLED=true
AGENT_HEARTBEAT_INTERVAL=30

# Agent Fallback Polling
AGENT_FALLBACK_POLL_ENABLED=true
AGENT_FALLBACK_POLL_INTERVAL=60

# Worker Service Configuration
WORKER_ADDR=:8082

# Redis Configuration (for push notifications)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_default_password
REDIS_DB=0

# Feature Flags
ENABLE_POLLING=true

# Docker Compose Settings
COMPOSE_PROJECT_NAME=service-distribute-management